# Useful functions
source /cbc/shared/bin/includes.bash

function gatk() {
  TOOL_PATH=${SHARED_SOFTWARE}/GATK-latest
  TOOL=${TOOL_PATH}/GenomeAnalysisTK.jar
  args=$*
  if test -z "${args}"; then
    echo "Usage: gatk [...]"
    args="--help"
  fi
  cmd="java -jar ${TOOL_PATH}/GenomeAnalysisTK.jar ${args}"
  echo ${cmd}
  ${cmd}
} # gatk()

gatk $*


###################################################################
# HISTORY:
# 2012-04-30
# o Added gatk script.
###################################################################
